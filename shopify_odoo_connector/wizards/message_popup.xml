<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
	
	<!-- SUCCESS MESSAGE WIZARD -->
	<record id="ds_success_message_wizard" model="ir.ui.view">
		<field name="name">ds.message.wizard</field>
		<field name="model">ds.message_wizard</field>
		<field name="arch" type="xml">
			<form string="Message" class="success_message">
				<field name="name"/>
				<footer>
					<button string="OK" class="btn-primary" special="cancel" />
				</footer>
			</form>
		</field>
	</record>
	
	<!-- ERROR MESSAGE WIZARD -->
	<record id="ds_error_message_wizard" model="ir.ui.view">
		<field name="name">ds.message.wizard</field>
		<field name="model">ds.message_wizard</field>
		<field name="arch" type="xml">
			<form string="Message" class="error_message">
				<field name="name"/>
				<footer>
					<button string="OK" class="btn-primary" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

</data>
</odoo>