<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<!-- COLOR CODE INSTANCE METHOD -->
    <record model="ir.actions.act_window" id="color_data_display_action">
        <field name="name">Color Code</field>
        <field name="res_model">ds.color_size_code_tbl</field>
        <field name="view_mode">tree,form</field>
    </record>
	
    <!-- COLOR CODE TREE VIEW  -->
	<record model="ir.ui.view" id="color_list_view">
      <field name="name">Color Code</field>
      <field name="model">ds.color_size_code_tbl</field>
      <field name="arch" type="xml">
        <tree>
          <field name="color_name" />
          <field name="color_code" />
          <field name="size_name" />
          <field name="size_code" />
        </tree>
      </field>
    </record>
</odoo>