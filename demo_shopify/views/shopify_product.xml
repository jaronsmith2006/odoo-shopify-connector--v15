                                    <field name="op_val_id" />
                                </group>
                            </div>
                            <div class="col">
                                <group>
                                    <field name="product_id" />
                                    <field name="instance_id"/>
                                </group>
                            </div>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
  
