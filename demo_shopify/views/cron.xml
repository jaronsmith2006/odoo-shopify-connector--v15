<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.actions.act_window" id="demo_shopify.cron_action">
        <field name="name">Cron</field>
        <field name="res_model">demo_shopify.common</field>
        <field name="view_mode">tree,form</field>
    </record>
	
	<record model="ir.ui.view" id="shopify_cron_tree">
      <field name="name">Cron</field>
      <field name="model">demo_shopify.common</field>
      <field name="arch" type="xml">
        <tree>
            <field name="id" />
            <field name="is_active" />
            <field name="type" />
            <field name="action_type" />
            <field name="from_instance" />
            <field name="to_instance" />
            <field name="product_ids" />
            <field name="last_cursor" />
            <field name="status" />
            <field name="fail_message" />
            <field name="sync_end_date" />
            <field name="created_date" />
        </tree>
      </field>
    </record>
</odoo>